{
  "name": "@c4coin/validator-contracts",
  "version": "1.0.0",
  "description": "Validator contracts for C4Coin.",
  "main": "truffle.js",
  "directories": {
    "test": "test",
    "contracts": "contracts"
  },
  "engines": {
    "node": "10.0.0",
    "npm": "6.0.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.8.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "solhint": "^1.1.10",
    "solidity-coverage": "^0.5.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --no-semi --write '**/*.{js,json}'",
    "eslint-check":
      "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "test": "truffle test",
    "test:cov": "solidity-coverage",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:js": "eslint test/**/*.js"
  },
  "lint-staged": {
    "**/*.{js,json}": ["prettier --single-quote --no-semi --write", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/c4coin/validator-contracts.git"
  },
  "keywords": ["Ethereum", "Parity", "C4Coin", "consensus"],
  "author": "Dave Sag <davesag@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c4coin/validator-contracts/issues"
  },
  "homepage": "https://github.com/c4coin/validator-contracts#readme",
  "dependencies": {}
}
